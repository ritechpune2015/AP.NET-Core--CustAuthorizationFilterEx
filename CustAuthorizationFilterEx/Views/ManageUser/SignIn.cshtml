@model LoginVM
<html>
    <head>
        <title> Login </title>
    </head>
    <body>
         <h2> Login </h2>
       <form asp-action="SignIn" method="post">
         <div asp-validation-summary="ModelOnly">
         </div>
        <table>
            <tr>
                <td> 
                    <label asp-for="EmailID"></label>
                </td>
                <td>
                  <input asp-for="EmailID" />
                  <span asp-validation-for="EmailID"></span>
                </td>
            </tr>
            <tr>
                <td> <label asp-for="Password"></label></td>
                <td>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="SignIn" /> <br />
                    <a asp-action="SignUp"> New User SignUp </a>
                </td>
            </tr>

        </table>
       </form>
    </body>
</html>